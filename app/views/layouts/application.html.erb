<!DOCTYPE html>
<html>
<head>
  <title>ForMom</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div id="nav-container">
    <div class="row">
      <div class="container">
        <%= render "layouts/nav" %>
      </div>
    </div>
  </div>
  <%- flash.each do |key, value| -%>
    <div class="large-12 alert-box <%= key %>">
        <% if value.class == String %>
          <%= value %>
        <% else %>
          <ul>
            <% value.each do |error| %>
              <li><%= error %></li>
            <% end %>
          </ul>
        <% end %>
    </div>
  <%- end -%>

  <%= yield %>

  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
</html>
