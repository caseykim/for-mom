<div class="gift-container">

  <div class="gift-form">
    <%= form_for @gift do |f| %>
    <h2>What would you like for your birthday?</h2>
    <br/>
      <div class="row">
        <div class="large-6 columns">
          <%= f.label :name, "Name of the item"%>
          <%= f.text_field :name %>
        </div>
        <div class="large-6 columns">
          <%= f.label :price, "Amount in USD"%>
          <%= f.number_field :price, size: 5, value: 0, step: 0.01, min: 0 %>
        </div>
      </div>
      <div class="row">
        <div class="large-12 columns">
          <%= f.label :description %>
          <i>(optional)</i>
          <%= f.text_field :description %>
          <%= f.submit "Add", class: "button right" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
