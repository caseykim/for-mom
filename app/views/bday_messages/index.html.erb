<div class="row content">
  <div class="medium-12 columns">
    <div class="medium-8 columns">
      <ul>
        <% @bday_messages.each do |message| %>
          <fieldset>
            <legend><%= message.name %><%= image_tag('/red.png', class: "heart") %></legend>
            <p><%= message.body %>
            <%= link_to "Delete(삭제)", message, method: :delete, data: { confirm: "Are you sure? 삭제하시겠습니까?" }, class: "tiny secondary button right" %>
            <%= link_to "Edit(수정)", edit_bday_message_path(message), class: "tiny button right" %>
            </p>
          </fieldset>
        <% end %>
      </ul>
      <%= link_to "New Message 메세지를 남겨주세요", new_bday_message_path, class: "button right" %>
    </div>
    <div class="medium-4 columns">
      <%= image_tag('/mom.png') %>
    </div>
  </div>
</div>
